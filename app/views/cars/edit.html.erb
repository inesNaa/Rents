<%= form_with model: @car, class: "form" do |f| %>
  <div>
    <div>
      <%= f.label :type_of_vehicle %>
      <%= f.text_field :type_of_vehicle %>
    </div>
    <div>
      <%= f.label :brand %>
      <%= f.text_field :brand %>
    </div>
    <div>
      <%= f.label :model %>
      <%= f.text_field :model %>
    </div>
  </div>

  <div>
    <div>
      <%= f.label :mileage %>
      <%= f.number_field :mileage %>
    </div>
    <div>
      <a href="#" class="btn btn-prev">précédent</a>
      <a href="#" class="btn btn-next">suivant</a>
    </div>
  </div>

  <div>
    <div>
      <%= f.label :plate_number %>
      <%= f.text_field :plate_number %>
    </div>
    <div>
      <%= f.label :year %>
      <%= f.number_field :year %>
    </div>
    <div>
      <%= f.label :car_country %>
      <%= f.text_field :car_country %>
    </div>
    <div>
      <a href="#" class="btn btn-prev">précédent</a>
      <a href="#" class="btn btn-next">suivant</a>
    </div>
  </div>

  <div>
    <div>
      <%= f.label :fuel %>
      <%= f.text_field :fuel %>
    </div>
    <div>
      <%= f.label :gearbox %>
      <%= f.text_field :gearbox %>
    </div>
    <div>
      <a href="#" class="btn btn-prev">précédent</a>
      <input type="submit" value="Submit" class="btn" />
    </div>
  </div>

  <div>
    <div>
       <%= f.label :doors %>
      <%= f.number_field :doors %>
    </div>
    <div>
     <%= f.label :seats %>
      <%= f.number_field :seats %>
    </div>
    <div>
      <a href="#" class="btn btn-prev">précédent</a>
      <input type="submit" value="Submit" class="btn" />
    </div>
  </div>

  <div>
    <div>
       <%= f.label :options %>
      <%= f.text_field :options %>
    </div>
    <div>
      <%= f.label :price_per_day%>
      <%= f.number_field :price_per_day %>
    </div>
    <div>
      <a href="#" class="btn btn-prev">précédent</a>
      <input type="submit" value="Submit" class="btn" />
    </div>
  </div>
<% end %>
