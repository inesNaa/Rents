<div class="main-wrapper-show">
  <div class="card-selection-show">
    <div class="show-title">
      <h1>Récapitulatif de votre choix</h1>
    </div>
    <div class="card-informations-show">
      <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="10000">
            <img src="https://images.pexels.com/photos/14692379/pexels-photo-14692379.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item" data-bs-interval="2000">
            <img src="https://images.pexels.com/photos/14692374/pexels-photo-14692374.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://images.pexels.com/photos/14692371/pexels-photo-14692371.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <div class="informations">
        <h1><%= @car.brand %></h1>
        <div class="icon-infos">
          <p><i class="fa-solid fa-car"></i><%= @car.type_of_vehicle %></p>
          <p><i class="fa-solid fa-location-pin"></i><%= @car.city %></p>
          <p><i class="fa-solid fa-gas-pump"></i><%= @car.fuel %></p>
        </div>
      </div>
      <div class="price">
        <p id="first">A PARTIR DE</p>
        <p id="second"><%= @car.price_per_day %>€/Jour</p>
        <p id="third">TOTAL 400€</p>
      </div>
    </div>
  </div>
  <div class="car-details">
    <h2>Détails du véhicule</h2>
    <p><%= @car.description %></p>
  </div>
  <div class="vehicle-infos">
    <div class="veh-info">
      <div class="veh-content">
        <h5>Modèle</h5>
        <p><%= @car.model %></p>
        <h5>Année</h5>
        <p><%= @car.year %></p>
        <h5>Kms</h5>
        <p><%= @car.mileage %></p>
      </div>
    </div>
    <div class="veh-info" id="car-calendar">
      <%= simple_form_for [@car, @booking], data: { controller: 'flatpickr' } do |f| %>
        <h5><%= @car.price_per_day %>€/Jour</h5>
        <p><i class="fa-sharp fa-solid fa-star"></i>4.99 (300 commentaires)</p>
        <%= f.input :start_date, as: :string, label:"Date et heure de départ", input_html: { data: { flatpickr_target: "startTime" } } %>
        <%= f.input :end_date, as: :string, label: "Date et heure de retour", input_html: { data: { flatpickr_target: "endTime" }, id: 'end_time' } %>
        <%= f.submit 'Réserver ce véhicule', class:"btn-calendar" %>
      <% end %>
    </div>
    <div class="veh-info">
      <%=  link_to "Supprimer ce véhicule", destroy_car_path(@car), class:"car-link", data: {turbo_method: :delete}  %>
      <%=  link_to "Modifier les informations", edit_car_path(@car), class:"car-link" %>
      <%=  link_to "Selectionner un autre véhicule", cars_path, class:"car-link" %>
    </div>
  </div>
</div>
